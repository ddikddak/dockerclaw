generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agent {
  id          String     @id @default(uuid())
  name        String
  email       String     @unique
  api_key     String     @unique
  webhook_url String?
  created_at  DateTime   @default(now())
  
  templates   Template[]
  cards       Card[]
  events      Event[]
}

model Template {
  id         String   @id @default(uuid())
  agent_id   String
  name       String
  schema     Json
  created_at DateTime @default(now())
  
  agent      Agent    @relation(fields: [agent_id], references: [id])
  cards      Card[]
}

model Card {
  id          String   @id @default(uuid())
  template_id String
  agent_id    String
  data        Json
  status      String   @default("pending")
  created_at  DateTime @default(now())
  
  template    Template @relation(fields: [template_id], references: [id])
  agent       Agent    @relation(fields: [agent_id], references: [id])
}

model Event {
  id         String   @id @default(uuid())
  agent_id   String
  type       String
  payload    Json
  status     String   @default("pending")
  created_at DateTime @default(now())
  
  agent      Agent    @relation(fields: [agent_id], references: [id])
}

model Comment {
  id          String   @id @default(uuid())
  card_id     String
  author_type String   // 'human' | 'agent'
  author_id   String
  author_name String
  content     String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  
  @@index([card_id])
}

model Reaction {
  id          String   @id @default(uuid())
  card_id     String
  author_type String   // 'human' | 'agent'
  author_id   String
  emoji       String   // 'üëç', '‚ù§Ô∏è', 'üéâ', etc.
  created_at  DateTime @default(now())
  
  @@unique([card_id, author_id, emoji])
  @@index([card_id])
}

model ApiKey {
  id         String   @id @default(uuid())
  name       String
  keyHash    String   @unique
  keyPrefix  String   // Primeres 8 car√†cters per mostrar (dk_xxxxxx)
  isActive   Boolean  @default(true)
  lastUsedAt DateTime?
  createdAt  DateTime @default(now())
  
  @@index([isActive])
  @@index([keyHash])
}
